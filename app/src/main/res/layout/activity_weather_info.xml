<?xml version="1.0" encoding="utf-8"?>

<androidx.constraintlayout.widget.ConstraintLayout  xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".WeatherInfo">


<androidx.cardview.widget.CardView
    android:id="@+id/cv"
    android:layout_width="match_parent"
    android:layout_height="90dp"
    app:cardCornerRadius="35dp"
    app:layout_constraintBottom_toTopOf="@+id/cv2"
    android:layout_marginBottom="220dp"
    >

    <androidx.appcompat.widget.AppCompatImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/ss1" >

    </androidx.appcompat.widget.AppCompatImageView>

    <TextView
        android:id="@+id/day"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:scaleType="fitCenter"
        android:background="@color/white"
        android:textColor="@color/black"
        android:layout_marginLeft="150dp"
        android:textStyle="bold"
        android:text="day"
        android:textSize="20dp"
        />







    <TextView
        android:id="@+id/condition"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:textColor="@color/black"
        android:scaleType="fitCenter"
        android:layout_marginLeft="150dp"
        android:text="condition"
        android:textStyle="bold"
        android:layout_marginTop="66dp"
        android:textSize="20dp"
        />



    <TextView
        android:layout_marginTop="33dp"
        android:layout_marginLeft="150dp"
        android:id="@+id/temp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:textColor="@color/black"        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="@+id/day"
        android:scaleType="fitCenter"
        android:text="temp"
        android:textSize="20dp"
        />



</androidx.cardview.widget.CardView>



    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="90dp"
        android:id="@+id/cv2"
        app:cardCornerRadius="35dp"
        android:layout_marginTop="300dp"
        app:layout_constraintBottom_toBottomOf="@+id/cv"
     >


        <androidx.appcompat.widget.AppCompatImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ss2"
            />

        <TextView
            android:id="@+id/day2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@color/white"
            android:textColor="@color/black"
            android:scaleType="fitCenter"
            android:layout_marginLeft="150dp"
            android:textStyle="bold"
            android:textColorHighlight="@color/black"
            android:outlineAmbientShadowColor="@color/black"
            android:text="day"
            android:textSize="20dp"
            />



        <TextView
            android:layout_marginTop="33dp"
            android:layout_marginLeft="150dp"
            android:id="@+id/temp2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@color/white"
            android:textColor="@color/black"
            android:textStyle="bold"
            app:layout_constraintBottom_toBottomOf="@+id/day2"
            android:scaleType="fitCenter"
            android:text="temp"
            android:textSize="20dp"
            />

        <TextView
            android:id="@+id/condition2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@color/white"
            android:textColor="@color/black"
            android:scaleType="fitCenter"
            android:textStyle="bold"
            android:textColorHighlight="@color/black"
            android:outlineAmbientShadowColor="@color/black"
            android:backgroundTint="@color/white"
            android:layout_marginLeft="150dp"
            android:text="condition"
            android:layout_marginTop="66dp"
            android:textSize="20dp"
            />

    </androidx.cardview.widget.CardView>

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="90dp"
        android:layout_marginTop="220dp"
        app:cardCornerRadius="35dp"
        android:id="@+id/cv3"
        app:layout_constraintTop_toBottomOf="@+id/cv2">

        <androidx.appcompat.widget.AppCompatImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ss6"
            />




        <TextView
            android:id="@+id/day3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@color/white"
            android:textColor="@color/black"
            android:scaleType="fitCenter"
            android:layout_marginLeft="150dp"
            android:textStyle="bold"
            android:textColorHighlight="@color/black"
            android:outlineAmbientShadowColor="@color/black"
            android:text="day"
            android:textSize="20dp"
            />



        <TextView
            android:layout_marginTop="33dp"
            android:layout_marginLeft="150dp"
            android:id="@+id/temp3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@color/white"
            android:textColor="@color/black"
            android:textStyle="bold"
            app:layout_constraintBottom_toBottomOf="@+id/day2"
            android:scaleType="fitCenter"
            android:text="temp"
            android:textSize="20dp"
            />


        <TextView
            android:id="@+id/condition3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@color/white"
            android:textColor="@color/black"
            android:scaleType="fitCenter"
            android:textStyle="bold"
            android:textColorHighlight="@color/black"
            android:outlineAmbientShadowColor="@color/black"
            android:backgroundTint="@color/white"
            android:layout_marginLeft="150dp"
            android:text="condition"
            android:layout_marginTop="66dp"
            android:textSize="20dp"
            />


    </androidx.cardview.widget.CardView>



</androidx.constraintlayout.widget.ConstraintLayout>